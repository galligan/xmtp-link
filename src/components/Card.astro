---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	href: string;
	icon: string;
	iconAlt: string;
  borderColor?: string;
}

const { href, title, icon, iconAlt, borderColor } = Astro.props;
---

<li class="link-card" style={`border-color: ${borderColor || '#FFFFFF'};`}>
	<a href={href} class="card-content">
		<Image
		  src={icon}
			alt={iconAlt}
			class="card-icon"
			width="24"
			height="24"
		/>
		<h2 class="card-title">
			{title}
		</h2>
	</a>
</li>

<style>
	.link-card {
		height:62px;
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: white;
		background-image: none;
		background-size: 400%;
		border-radius: 29px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		/* box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.5); */
		border:1px solid #333333;
	}
	.card-icon {
		height:28px;
		width:28px;
		display:inline;
		margin-right:12px;
		border-radius: 8px;
	}
	.card-content {
		display: flex;
		align-items: center;
		justify-content: flex-start;
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 23px 23px 23px 19px;
		border-radius: 30px;
		color: black;
		background-color: white;
		opacity: 0.8;
	}
	.card-title {
		margin: 0;
		font-size: 1.25rem;
		font-weight:500;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		display:inline;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
		transition: 0.15s ease-in-out;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: #000000;
	}
</style>
